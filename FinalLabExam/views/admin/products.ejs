<h3>Admin Panel - Products</h3>
<a href="/admin/products/create" class="btn btn-info">Create New Product</a>

<h4>Product List</h4>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% for(let index = 0; index < products.length; index++) { %>
            <tr>
                <td><%= products[index]._id %></td>
                <td><%= products[index].title %></td>
                <td><%= products[index].price %></td>
                <td><%= products[index].description %></td>
                <td>
                    <a href="/admin/products/edit/<%= products[index]._id %>" class="btn btn-warning">Edit</a>
                    <a href="/admin/products/delete/<%= products[index]._id %>" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>

<h4>Order List</h4>
<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Address</th>
            <th>Total Amount</th>
            <th>Order Date</th>
        </tr>
    </thead>
    <tbody>
        <% orders.forEach(order => { %>
            <tr>
                <td><%= order._id %></td>
                <td><%= order.customerName %></td>
                <td>
                    <%= order.address.street %>, 
                    <%= order.address.city %>, 
                    <%= order.address.postalCode %>
                </td>
                <td>$<%= order.totalAmount %></td>
                <td><%= order.orderDate.toLocaleString() %></td>
            </tr>
        <% }) %>
    </tbody>
</table>
